<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴"
            android:textColor="#1E90FF"
            android:textSize="20dp"
            android:drawableStart="@drawable/ic_menu_blue_24dp"
            android:drawableLeft="@drawable/ic_menu_blue_24dp"/>
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="오늘"
            android:textColor="#696969"
            android:layout_marginTop="40dp"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:text="13315"
            android:textColor="#000000"
            android:textSize="40dp" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="/10000"
                android:textColor="#696969"
                android:textSize="25dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="일일 걸음 수"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="22dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#A9A9A9"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="400dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="활동시간"
            android:textColor="#000000"
            android:drawableStart="@drawable/ic_history_black_24dp"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:textSize="17dp" />

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="112"
                android:textColor="#000000"
                android:textSize="35dp" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="/60분"
                 android:layout_marginLeft="0dp"
                 android:textColor="#696969"
                 android:textSize="15dp" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="120dp"
                 android:text="1882"
                 android:textColor="#000000"
                 android:textSize="15dp" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="kcal"
                 android:layout_marginLeft="0dp"
                 android:textColor="#696969"
                 android:textSize="15dp" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="10dp"
                 android:text="8.92"
                 android:textColor="#000000"
                 android:textSize="15dp" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="km"
                 android:layout_marginLeft="0dp"
                 android:textColor="#696969"
                 android:textSize="15dp" />

         </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#A9A9A9" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="운동"
            android:drawableStart="@drawable/ic_directions_run_black_24dp"
            android:drawableLeft="@drawable/ic_directions_run_black_24dp"
            android:textColor="#000000"
            android:textSize="17dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:drawableStart="@drawable/ic_play_arrow_black_24dp"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
                android:layout_marginTop="20dp"
                android:text="시작하기"
                android:textSize="20dp"/>

        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#A9A9A9"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="음식"
            android:drawableStart="@drawable/ic_restaurant_black_24dp"
            android:drawableLeft="@drawable/ic_restaurant_black_24dp"
            android:textColor="#000000"
            android:textSize="17dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가하기"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="200dp"
                android:drawableStart="@drawable/ic_playlist_add_black_24dp"
                android:drawableLeft="@drawable/ic_play_arrow_black_24dp"/>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>